# Used for rpm-packaging of pre-bundled application with already resolved JS dependencies
%global _plugindir %{_datarootdir}/cockpit/
%global source_basename @PACKAGE_TARNAME@-@PACKAGE_VERSION@
%global product oVirt
%global dashboard_family %{product} Node

Name:           cockpit-ovirt
Version:        @PACKAGE_RPM_VERSION@
Release:        @PACKAGE_RPM_RELEASE@%{?release_suffix}%{?checkout}%{?dist}
Summary:        Virtual Machine Management plugin for Cockpit based on %{product}.
License:        ASL 2
URL:            https://github.com/mareklibra/%{name}
Source0:        %{source_basename}.tar.gz
BuildArch:      noarch

Requires: cockpit
Requires: vdsm >= 4.17.999-610

%description
Virtual Machine Management plugin for Cockpit based on oVirt.

%package node-dashboard

Summary:        Cockpit dashboard for %{dashboard_family} Node configuration
Requires:       cockpit
BuildArch:      noarch

%description node-dashboard
This package provides a Cockpit dashboard for use with %{dashboard_family}.

%prep
%setup -q -n"%{source_basename}"

%build
%configure

%install
make install DESTDIR=%{buildroot}
chmod a+x %{buildroot}/%{_plugindir}vdsm

%files
%doc vdsm/README.md 
%license LICENSE
%{_plugindir}/vdsm

%files node-dashboard
%{_datarootdir}/cockpit/ovirt/manifest.json
%{_datarootdir}/cockpit/ovirt/app.css
%{_datarootdir}/cockpit/ovirt/index.html

